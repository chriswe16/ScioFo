<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="consumerphysics.com.myscioapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.consumerphysics.android.sdk.sciosdk.ScioLoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="consumerphysics.com.sciofood.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="consumerphysics.com.sciofood.DiscoverActivity"
            android:label="@string/title_activity_discover"
            android:screenOrientation="portrait" />
        <activity
            android:name="consumerphysics.com.sciofood.ModelActivity"
            android:label="@string/title_activity_model"
            android:screenOrientation="portrait" />
        <activity
            android:name="consumerphysics.com.sciofood.ClassificationActivity"
            android:label="@string/title_activity_classification"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name="consumerphysics.com.myscioapplication.EstimationActivityis"
            android:label="@string/title_activity_classification"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>

        <service
            android:name="com.consumerphysics.android.scioconnection.services.SCiOBLeService"
            android:exported="false" />
    </application>

</manifest>