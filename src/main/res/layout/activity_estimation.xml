<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    tools:context=".EstimationActivity">


    <TextView
        android:id="@+id/tv_est_question"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:text="Wie hoch ist der Fettanteil?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_est_result_y"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightred"
        android:text="..?"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <Button
        android:id="@+id/btn_est_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:onClick="doScanEstimation"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:text="Scan" />

    <Button
        android:id="@+id/btn_est_calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:onClick="doCalibrate"
        android:background="@color/primary_dark"
        android:textColor="@color/primary_text_default_material_dark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_margin="10dp"
        android:elevation="60dp"
        android:text="Kalibrieren" />

    <Button
        android:id="@+id/btn_est_modells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:onClick="doModels"
        android:background="@color/primary_dark"
        android:textColor="@color/primary_text_default_material_dark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_margin="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="60dp"
        android:padding="20dp"
        android:text="Modell auswÃ¤hlen" />


</LinearLayout>
